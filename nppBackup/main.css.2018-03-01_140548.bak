/* --- Page setup. ---*/
html, body {
  background-color: #FFFFFF;
  margin: 10px;
  font-size: 1.1em;
}

/* Mobile view */
.wrapper {
	display: grid;
	grid-gap: 10px;
	grid-template-columns: 1fr 1fr;
	grid-template-areas: 
	"header header"
	"nav nav"
	"cName cName"
	"cLeft cRight"
	"cLeft cRight"
	"footer footer";
}

/* 2-column view */
@media (min-width: 650px) {
	.wrapper {
		grid-template-areas: 
			"header header"
			"nav nav"
			"cName cName"
			"cLeft cRight"
			"cLeft cRight"
			"footer footer";
	}
}

/* 3-column view */
@media (min-width: 900px) {
	.wrapper {
		grid-template-areas: 
			"header header"
			"nav nav"
			"cName cName"
			"cLeft cRight"
			"cLeft cRight"
			"footer footer";
	}
}

.main-head {
	grid-area: header;
	background-color: black;
}
.cName{
	grid-area: cName;
}

.main-nav {
	grid-area: nav;
	border: 1px solid #B8A062;
}

.main-footer {
	grid-area: footer;
	border: 1px solid #B87462;
}

.cLeft {
	grid-area: cLeft;
	background-color: #294C5D;
}

.cRight {
	grid-area: cRight;
	background-color: #FFF9E8;
}

.factionHeader {
	margin: 10px;
}

